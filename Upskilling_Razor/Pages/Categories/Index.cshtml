@page
@model Upskilling_Razor.Pages.Categories.IndexModel
<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Category List</h2>
		</div>
		<div class="col-6">
			<a asp-page="./create" class="btn btn-primary">Create Category</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Display Order</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<a asp-page="./edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
				</td>
				<td>
					<a asp-page="./delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>