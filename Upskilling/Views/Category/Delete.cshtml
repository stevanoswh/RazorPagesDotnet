@model Category

<form method="post">
	<input asp-for="Id" hidden />
	<div class="row pb-2">
		<h2>Delete Category</h2>
		<hr />
	</div>
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" type="text" class="form-control" disabled/>
	</div>
	<div class="mb-3">
		<label asp-for="DisplayOrder"></label>
		<input asp-for="DisplayOrder" type="text" class="form-control" disabled/>
	</div>
	<div class="row">
		<div class="col-6">
			<button type="submit" class="btn btn-danger form-control">Delete</button>
		</div>
		<div class="col-6">
			<a asp-controller="category" asp-action="index" class="btn btn-secondary form-control">Back to List</a>
		</div>
	</div>
</form>